<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0A"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/pageSetup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âš¡ WaldonCFscanner"
            android:textColor="#00E676"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BASE VLESS URI"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/inputUri"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:hint="Paste vless://... here"
                android:textColorHint="#555555"
                android:textColor="#00FFFF"
                android:backgroundTint="#333333"
                android:textSize="14sp"
                android:singleLine="true" />

            <Button
                android:id="@+id/btnPaste"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“‹ PASTE"
                android:textColor="#2196F3" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#151515"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="#333333"
            app:strokeWidth="1dp"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TARGET IPS"
                    android:textColor="#888888"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/inputTargetSetup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="10"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#555555"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/tvPowerLabelSetup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ENGINE POWER: 10%"
                    android:textColor="#888888"
                    android:textSize="12sp" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderPowerSetup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="1.0"
                    android:valueTo="100.0"
                    android:value="10.0"
                    android:stepSize="1.0"
                    app:thumbColor="#00E676"
                    app:trackColorActive="#00E676" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchDebug"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Verbose Debug Logs"
                    android:textColor="#FFFFFF"
                    android:checked="true"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/btnStartMain"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="â–¶ INITIALIZE ENGINE"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#4CAF50"
            app:cornerRadius="12dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pageScanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvActiveUri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="vless://..."
            android:textColor="#00FFFF"
            android:textSize="11sp"
            android:singleLine="true"
            android:ellipsize="middle"
            android:padding="8dp"
            android:background="#151515"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView android:text="Target:" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/inputTargetLive"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="#00E676"
                android:inputType="number"
                android:enabled="false"
                android:gravity="center"/>

            <Space android:layout_width="16dp" android:layout_height="wrap_content"/>

            <TextView android:text="Power:" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/inputPowerLive"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="#00E676"
                android:inputType="number"
                android:enabled="false"
                android:gravity="center"/>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#151515"
            app:cardCornerRadius="12dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView android:text="1. TCP Probes" android:textColor="#AAAAAA" android:textSize="11sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/pbTcp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:trackThickness="10dp"
                    app:trackCornerRadius="5dp"
                    app:indicatorColor="#2196F3"
                    android:layout_marginBottom="6dp"/>

                <TextView android:text="2. TLS Handshakes" android:textColor="#AAAAAA" android:textSize="11sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/pbTls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:trackThickness="10dp"
                    app:trackCornerRadius="5dp"
                    app:indicatorColor="#9C27B0"
                    android:layout_marginBottom="6dp"/>

                <TextView android:text="3. Payload Speed Tests" android:textColor="#AAAAAA" android:textSize="11sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/pbSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:trackThickness="10dp"
                    app:trackCornerRadius="5dp"
                    app:indicatorColor="#00BCD4"
                    android:layout_marginBottom="6dp"/>

                <TextView android:text="4. Xray Verification" android:textColor="#AAAAAA" android:textSize="11sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/pbXray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:trackThickness="10dp"
                    app:trackCornerRadius="5dp"
                    app:indicatorColor="#FFEB3B"/>

                <TextView android:id="@+id/tvTargetProgress" android:text="ðŸŽ¯ Target: 0 / 10" android:textColor="#00E676" android:textStyle="bold" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VERIFIED CONFIGS:"
            android:textColor="#00E676"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#111111"
            android:padding="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvConfigs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:textIsSelectable="true" />
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnPauseResume"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="â¸ PAUSE"
                android:backgroundTint="#FF9800"
                app:cornerRadius="8dp" />

            <Space android:layout_width="8dp" android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnStopLive"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="â¹ STOP"
                android:backgroundTint="#F44336"
                app:cornerRadius="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnCopyConfigs"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ’¾ Copy Configs"
                android:textColor="#00E676"
                app:strokeColor="#00E676"/>

            <Space android:layout_width="8dp" android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnCopyLogs"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“„ Copy Logs"
                android:textColor="#AAAAAA"
                app:strokeColor="#555555"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TERMINAL LOGS:"
            android:textColor="#888888"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/logScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#050505"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvLogs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#CCCCCC"
                android:textSize="10sp"
                android:fontFamily="monospace"
                android:text="Logs initialized...\n" />
        </ScrollView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>